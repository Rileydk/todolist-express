<form action="/todos/{{ todo._id }}/delete?_method=DELETE" method="POST" style="display: inline;">
  <div class="input-group">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <input class="input-group-text" type="checkbox" name="isDone" {{#if todo.isDone }} checked {{/if}} disabled>
      </div>
    </div>
    <input class="form-control text-primary" type="text" value="{{ todo.name }}" disabled>
    <div class="input-group-append">
      <a class="btn btn-success" href="/todos/{{ todo._id }}/edit">Edit</a>
      <button class="btn btn-danger" type="submit">Delete</button>
    </div>
  </div>
</form>
