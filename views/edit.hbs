<form action="/todos/{{ todo._id }}/edit?_method=PUT" method="POST">
  <div class="input-group">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <input class="input-group-text" type="checkbox" name="isDone" {{#if todo.isDone }} checked {{/if}}>
      </div>
    </div>
    <input class="form-control text-primary" type="text" name="name" value="{{ todo.name }}">
    <div class="input-group-append">
      <button class="btn btn-success" type="submit">Save</button>
    </div>
  </div>
</form>
